{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // no unsed imports / variables
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true,
    // "allowImportingTsExtensions": true, // Don't do this. Instead remove extensions(.tsx) in the code && Add to webpack resolove extension
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true
    // "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": ["src/*.ts", "src/*.tsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "public"]
}


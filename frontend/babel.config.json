{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "edge": "17",
          "firefox": "60",
          "chrome": "67",
          "safari": "11.1"
        },
        "modules": "auto" // https://babeljs.io/docs/babel-preset-env#modules
      }
    ],
    ["@babel/preset-react", { "runtime": "automatic" }], // https://babeljs.io/docs/babel-preset-react#runtime
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "core-js": 3
      }
    ]
  ]
}
